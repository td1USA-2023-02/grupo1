#Ejemplo for
for i in range(11):
  print(i)

#Ejemplo recorrido tuple
thistuple = ("apple", "banana", "cherry")
for x in thistuple:
  print (x)

#Ejemplo recorrido lista
lista = ["apple lista", True]
for x in lista:
  print (x)

#Diccionarios
diccionario = {"Nombre": "Paula", 
               "Apellido": "Guerrero"}
print(diccionario)

print("quiero el valor asociado a la llave 'Nombre' : ", diccionario["Nombre"])

print(diccionario["Nombre"])

#Version simple
for key in diccionario:
  print(key, diccionario[key])
#Otra version
for key in diccionario.keys():
  print(key, diccionario[key])

print(diccionario.keys())
print(diccionario.values())
#llave 1= "nombre, llave 2 = apellido"

print ("---------")
for key in sorted(diccionario.keys()):
  print (key, diccionario[key]) #de la A a la Z

keys = sorted(diccionario.keys())
print ("inicio la variable keys = A a Z con sorted" ,keys)
keys.reverse()
print ("Organizo la variable keys de la Z a la A" ,keys)
keys.reverse()
print ("Organizo la variable keys de la A a la Z", keys)



#Tuplas
print("Tuplas")
tuple = (1,2,3,4)
print("Elementos del tuple: ", len(tuple))

tuple + (5,6) #no sirve
print(tuple)
print("Primer elemento del tuple: ", tuple[0])

#Ejemplo tuplas

#Condicionales
algo = 5
if algo > 10: 
  print("Es mayor que 10")
else:
  print("Es menor que 10")         

list = [1,3,18,19,20]
for i in list: 
  if i >= 18:  
    print("Con la edad: ", i, "Puede votar")
  else:
    print("Con la edad: ", i, "No puede votar") 

#Funciones
def suma(a,b):
  print(a+b)
  return a + b
  
respuesta = suma(8,10)
print(respuesta)  

#Actividad

def par(numero):
  if numero%2 == 0:
    print("Es par")
  else: 
    print("Es impar")

par(183813)

def validador(lista):
  for i in lista:
    if i % 2 == 0:
      print(i, "Es par")
    else: 
      print(i, "Es impar")
      
validador([1,2,3,4,5])

